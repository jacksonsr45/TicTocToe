<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@drawable/table_list_select_player" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:id="@+id/listPlayer" android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_height="wrap_content" android:id="@+id/textListPlayerName"
                android:textColor="@color/black"
                android:textSize="@dimen/size_text_list_player"
                android:fontFamily="@font/rancho"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="10dp" android:layout_marginStart="10dp"/>
        <ImageButton
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:id="@+id/buttonListDeletePlayer"
                android:padding="0dp"
                android:contentDescription="@string/describe_button_delete_player"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp" android:src="@drawable/corners_button"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView2"
                android:contentDescription="@string/describe_button_delete_player"
                app:srcCompat="@drawable/ic_button_cancel"
                app:layout_constraintTop_toTopOf="@+id/buttonListDeletePlayer"
                app:layout_constraintBottom_toBottomOf="@+id/buttonListDeletePlayer"
                app:layout_constraintEnd_toEndOf="@+id/buttonListDeletePlayer"
                app:layout_constraintStart_toStartOf="@+id/buttonListDeletePlayer"/>
        <ImageButton
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:id="@+id/buttonListSelectPlayer"
                android:padding="0dp"
                android:contentDescription="@string/describe_button_select_player"
                app:layout_constraintEnd_toStartOf="@+id/buttonListDeletePlayer"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="10dp" android:layout_marginEnd="10dp"
                android:src="@drawable/corners_button"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView3"
                android:contentDescription="@string/describe_button_select_player"
                app:srcCompat="@drawable/ic_button_check"
                app:layout_constraintTop_toTopOf="@+id/buttonListSelectPlayer"
                app:layout_constraintBottom_toBottomOf="@+id/buttonListSelectPlayer"
                app:layout_constraintEnd_toEndOf="@+id/buttonListSelectPlayer"
                app:layout_constraintStart_toStartOf="@+id/buttonListSelectPlayer"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:background="@drawable/table_list_select_player"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:id="@+id/listPlayer">

    <TextView
            android:text="@string/list_view_player_name"
            android:layout_height="wrap_content" android:id="@+id/textListPlayerName"
            android:textColor="@color/black"
            android:textSize="@dimen/size_text_list_player"
            android:fontFamily="@font/rancho"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
            android:layout_width="wrap_content" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp" android:layout_marginTop="5dp"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="25dp" app:srcCompat="@drawable/corners_button"
            android:id="@+id/buttonListSelectPlayer"
            android:padding="0dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonListDeletePlayer" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="10dp" android:layout_marginEnd="10dp"
            android:contentDescription="@string/describe_button_select_player"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_button_check" android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/buttonListSelectPlayer"
            app:layout_constraintBottom_toBottomOf="@+id/buttonListSelectPlayer"
            app:layout_constraintStart_toStartOf="@+id/buttonListSelectPlayer"
            app:layout_constraintEnd_toEndOf="@+id/buttonListSelectPlayer"
            android:contentDescription="@string/describe_button_select_player"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="25dp" app:srcCompat="@drawable/corners_button"
            android:id="@+id/buttonListDeletePlayer"
            android:padding="0dp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="10dp" android:layout_marginEnd="10dp"
            android:contentDescription="@string/describe_button_delete_player"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_button_cancel" android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/buttonListDeletePlayer"
            app:layout_constraintBottom_toBottomOf="@+id/buttonListDeletePlayer"
            app:layout_constraintStart_toStartOf="@+id/buttonListDeletePlayer"
            app:layout_constraintEnd_toEndOf="@+id/buttonListDeletePlayer"
            android:contentDescription="@string/describe_button_delete_player"/>
</androidx.constraintlayout.widget.ConstraintLayout>